<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kontakt</title>
    <!-- @include 'link.kit' -->
    <link rel="stylesheet" href="./dist/css/style.min.css">
</head>

<body>
    <!-- @include 'navcontact.kit' -->
    <div class="wrpper ">
        <div class="contact-bg section "></div>
        <div class="contact " id="contact">
            <div class="contact-title title section white-section">
                <h1>Kontakt</h1>
            </div>
            <div class="contact-items">
                <div class="contact-item next">
                    <p class="icon"><span>Numer Telefonu:</span> <button class=" border"><a class="next"
                                href="tel:+48 XXX XXX XXX">+48 XXX XXX XXX</a> </button></p>
                    <p class="icon"><span>Kontakt E-mail:</span><button class="border"> <a
                                href="mailto:kontakt@forest.com">kontakt@forest.com</a></button></p>
                </div>


            </div>
            <div class="contact-item ">
                <div class="wrapper">
                    <form >
                        <h2>Jeżeli chcesz nas wesprzeć
                        </h2>
                        <h3>Zostaw nam E-mail!</h3>

                        <div class="form-box" id="formbox">
                            <label for="username">Imię:</label>
                            <input type="text" id="username" placeholder="Podaj swoje imię!">
                            <p class="error-text">error</p>
                        </div>

                        <div class="form-box">
                            <label for="email">Adres e-mail:</label>
                            <input type="email" id="email" placeholder="Podaj e-mail">
                            <p class="error-text">error</p>
                        </div>

                        <div class="control-buttons">
                            <button class="clear ">Wyczyść</button>
                            <button class="send">Wyślij</button>
                        </div>

                        <div class="popup">
                            <p>E-mail został przekazany! Odezwiemy się !</p>
                            <button class="close">Zamknij</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- @include 'footer.kit' -->
    <script src="./dist/js/main.mini.js"></script>
</body>

</html>